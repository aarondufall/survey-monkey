<div class="container">

  
    <% if @errors %>
      <%= erb :_errors, locals: {errors: @errors} %>
    <% end %>

  <div id="login" class="info_box lob_heading form">
    <h1>Login!</h1>
    <form action="/login" method="post">
      <label for="name">Name:</label>
      <input type="text" id="name" name="user[name]"><br>

      <label for="password">Password:</label>
      <input type="password" id="password" name="user[password]"><br>

      <input type="submit" value="Login" class="regular_button">
    </form>
  </div>
</div>


<% if @errors %>
  <%= erb :_errors, locals: {errors: @errors} %>
<% end %>

<div id="signup" class="info_box lob_heading form">
  <h1>Sign Up!</h1>
    <form action="/signup" method="post">
      <label for="name">Name:</label>
      <input type="text" id="name" name="user[name]">

      <label for="email">Email:</label>
      <input type="text" id="email" name="user[email]">

      <label for="password">Password:</label>
      <input type="text" id="password" name="user[password]"><br>

      <label for="password_confirmation">Password Confirmation:</label>
      <input type="text" id="password_confirmation" name="user[password_confirmation]">
      
      <input type="submit" value="Add Yo'self" class="regular_button">
    </form>
</div>

